{%- style -%}
  .template-404 .title + * {
    margin-top: 1rem;
  }

  @media screen and (min-width: 750px) {
    .template-404 .title + * {
      margin-top: 2rem;
    }
  }

  .template-404 .helpful-links {
    margin-top: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .template-404 .helpful-links a {
    text-decoration: underline;
  }
{%- endstyle -%}

<meta name="robots" content="noindex">

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebPage",
  "name": "404 - Page Not Found",
  "description": "This page does not exist on Evora.",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": "{{ shop.url }}{{ request.path }}"
  }
}
</script>

<div class="template-404 page-width page-margin center">
  <p>
    {{ 'templates.404.subtext' | t }}
  </p>
  <h1 class="title">
    {{ 'templates.404.title' | t }}
  </h1>
  <div class="helpful-links">
    <a href="{{ routes.all_products_collection_url }}" class="button">
      {{ 'general.continue_shopping' | t }}
    </a>
    <a href="/blogs/lifestyle">Visit Our Blog</a>
    <a href="/">Go to Homepage</a>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-404.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "404",
      "label": "t:sections.main-404.settings.title.label"
    },
    {
      "type": "text",
      "id": "subtext",
      "default": "The page you're looking for doesn't exist or has been moved.",
      "label": "t:sections.main-404.settings.subtext.label"
    }
  ]
}
{% endschema %}
